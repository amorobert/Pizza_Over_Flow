<h2><a href="/questions/<%= @question.id %>"><%= @question.title %></a></h2>

<div>
	<% if Vote.find_by(votable_type: "Question", votable_id: @question.id, voter_id: current_user_id) %>
	<% vote = Vote.find_by(votable_type: "Question", votable_id: @question.id, voter_id: current_user_id) %>
		<form action="/votes/<%= vote.id %>" method="POST">
		<input type="hidden" name="_method" value="PUT">
	<% else %>
		<form action="/votes" method="POST">
	<% end %>
		<input type="hidden" name="question" value="<%= @question.id %>">
		<input type="submit" name="upvote" value="Upvote">
	</form>

	<span>Votes:  <%=@question.vote_count%></span>

	<% if Vote.find_by(votable_type: "Question", votable_id: @question.id, voter_id: current_user_id) %>
	<% vote = Vote.find_by(votable_type: "Question", votable_id: @question.id, voter_id: current_user_id) %>
		<form action="/votes/<%= vote.id %>" method="POST">
		<input type="hidden" name="_method" value="PUT">
	<% else %>
		<form action="/votes" method="POST">
	<% end %>
		<input type="hidden" name="question" value="<%= @question.id %>">
		<input type="submit" name="downvote" value="Downvote">
	</form>
</div>

<p><%=@question.content%></p>
<span>Votes: <%=@question.vote_count%></span>
<span>asked <%=@question.age%> ago</span>

<ul class="comments">
<%=erb :'/comments/_comment_show', :layout => false, :locals => { post: @question} %>
</ul>

<button class="button center new_question_comment_button">Comment on this Question</button>
<form action="/questions/<%=@question.id%>/comment" method="post" class="question-comment hidden">

	<label for="body-textarea" class="block mar-b-1"></label>
  <textarea name="content" tabindex="2" ></textarea>
   <input type="submit" value="Comment" >

</form>

<%=erb :'/answers/_answer_show', :layout => false, :locals =>{ answers: @answers, quest_id: @question.id } %>



<form action="/questions/<%=@question.id%>/answers" method="post" class="answer-post">

	<label for="body-textarea" class="block mar-b-1">Answer:</label>
  <textarea name="content" tabindex="2" ></textarea>
   <input type="submit" value="Answer" >

</form>
