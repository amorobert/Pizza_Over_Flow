<%answers.each do |answer| %>
<ul class="answers">
<li>
	<div>

	<% if Vote.find_by(votable_type: "Answer", votable_id: answer.id, voter_id: current_user_id) %>
	<% vote = Vote.find_by(votable_type: "Answer", votable_id: answer.id, voter_id: current_user_id) %>
		<form action="/votes/<%= vote.id %>" method="POST">
			<input type="hidden" name="_method" value="PUT">
	<% else %>
		<form action="/votes" method="POST">
	<% end %>
			<input type="hidden" name="answer" value="<%= answer.question_id %>">
			<input type="submit" name="upvote" value="Upvote">
		</form>

		<span>Votes:  <%=answer.vote_count%></span>

	<% if Vote.find_by(votable_type: "Answer", votable_id: answer.id, voter_id: current_user_id) %>
	<% vote = Vote.find_by(votable_type: "Answer", votable_id: answer.id, voter_id: current_user_id) %>
		<form action="/votes/<%= vote.id %>" method="POST">
			<input type="hidden" name="_method" value="PUT">
	<% else %>
		<form action="/votes" method="POST">
	<% end %>
			<input type="hidden" name="answer" value="<%= answer.question_id %>">
			<input type="submit" name="downvote" value="Downvote">
		</form>
	</div>
  <h3>Answer</h3>
  <span><%=answer.answerer.name%> answered <%=answer.age%> ago</span>
  <p><%=answer.content%></p>
  <h4>Comments: </h4>
  <ul class="answer-comments">
      <%= erb :'/comments/_comment_show', locals: {comment: answer.comments, post: answer}%>
   </ul>
   	<button class="button center new_answer_comment_button">Comment on this answer</button>
      <form action="/questions/<%=quest_id%>/answers/<%=answer.id%>/comment" method="post" class="answer-comment hidden">
	
		<label for="body-textarea" class="block mar-b-1"></label>
  		<textarea name="content" tabindex="2" ></textarea>
   		<input type="submit" value="Comment" >
	
	</form>
</li>
</ul>
<%end%>
